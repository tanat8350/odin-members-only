extends layout

block content
  a(href='/') Home
  h1 Sign up

  form(action="/", method="post")
    div
      label(for='input-first-name') First name:&nbsp;
      input(type='text' id='input-first-name' name='input-last-name' required)
    div
      label(for='input-last-name') Last name:&nbsp;
      input(type='text' id='input-last-name' name='input-last-name' required)
    div
      label(for='input-email') Email:&nbsp;
      input(type='text' id='input-email' name='input-email' required)
    div
      label(for='input-password') Password:&nbsp;
      input(type='text' id='input-password' name='input-password' required)
    button(type="submit") Sign up
  p Already have an account?&nbsp;
    a(href='/login') Login