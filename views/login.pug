extends layout

block content
  a(href='/') Home
  h1 Login

  form(action="/", method="post")
    div
      label(for='input-email') Email:&nbsp;
      input(type='text' id='input-email' name='input-email' required)
    div
      label(for='input-password') Password:&nbsp;
      input(type='text' id='input-password' name='input-password' required)
    button(type="submit") Login
  p Do not have an account&nbsp;
    a(href='/sign-up') Sign up